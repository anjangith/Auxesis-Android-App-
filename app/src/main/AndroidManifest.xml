<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="auxesisapp.anjanproduction.com.auxesis">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:node="replace" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="replace" />
    <uses-permission
        android:name="android.permission.INTERNET"
        tools:node="replace" />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        tools:node="replace" />
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        tools:node="replace" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:node="replace" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconic_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAOiKN3WUACiGuas826S26BlBd8JuykUNM"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuxCommunity"
            android:label="@string/title_activity_aux_community"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Registration"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PostActivity"
            android:label="@string/title_activity_post"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Social"
            android:label="@string/title_activity_social"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Add_Post"
            android:label="@string/title_activity_add__post"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Comments"
            android:label="@string/title_activity_comments"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CategoriesDescriptor"
            android:label="@string/title_activity_categories_descriptor"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".FinalMapActivity"
            android:label="@string/title_activity_final_map"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Notification"
            android:label="@string/title_activity_notification"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="auxesis_TARGET" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationPage"
            android:label="@string/title_activity_registration_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ContactUsPage"
            android:label="@string/title_activity_contact_us_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AboutPage"
            android:label="@string/title_activity_about_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FavItems"
            android:label="@string/title_activity_fav_items"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>