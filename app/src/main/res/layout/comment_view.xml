<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/comment_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_menu_send" />

        <TextView
            android:id="@+id/comment_nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/comment_imageView"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/comment_imageView"
            android:text="Anjan Saikia"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/comment_imageView"
            android:layout_below="@+id/comment_nameView"
            android:layout_marginTop="11dp"
            android:text="Comments are very good for social etwork"
            android:textColor="@color/cardview_light_background"
            android:textStyle="italic" />
    </RelativeLayout>

</android.support.v7.widget.CardView>